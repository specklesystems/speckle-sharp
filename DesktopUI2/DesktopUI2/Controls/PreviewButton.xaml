<UserControl
  x:Class="DesktopUI2.Controls.PreviewButton"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
  xmlns:m="clr-namespace:Material.Styles;assembly=Material.Styles"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <UserControl.Styles>
    <Style Selector="icons|MaterialIcon#previewOn">
      <Setter Property="RenderTransform" Value="scaleX(-1)" />
    </Style>
    <Style Selector="m|FloatingButton:pointerover icons|MaterialIcon#previewOn">
      <Setter Property="RenderTransform" Value="scaleX(-1)" />
    </Style>
  </UserControl.Styles>
  <Grid>
    <m:FloatingButton
      VerticalAlignment="Center"
      assists:ShadowAssist.ShadowDepth="Depth0"
      Background="Transparent"
      Command="{Binding PreviewCommand}"
      IsEnabled="{Binding PreviewEnabled}"
      ToolTip.Tip="Preview objects to send or receive">
      <Button.Content>
        <Panel>
            <icons:MaterialIcon
              Name="previewOn"
              IsVisible="{Binding PreviewOn}"
              Width="20"
              Height="20"
              assists:ShadowAssist.ShadowDepth="0"
              Foreground="{DynamicResource PrimaryHueMidBrush}"
              Kind="Lightbulb" />
            <icons:MaterialIcon
              Name="previewOff"
              IsVisible="{Binding !PreviewOn}"
              Width="20"
              Height="20"
              assists:ShadowAssist.ShadowDepth="0"
              Foreground="{DynamicResource PrimaryHueMidBrush}"
              Kind="LightbulbOutline" />
        </Panel>
      </Button.Content>
    </m:FloatingButton>
  </Grid>
</UserControl>
