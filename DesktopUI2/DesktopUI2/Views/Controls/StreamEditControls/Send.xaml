<UserControl
  x:Class="DesktopUI2.Views.Controls.StreamEditControls.Send"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:assists="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
  xmlns:c="clr-namespace:DesktopUI2.Views.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
  xmlns:m="clr-namespace:Material.Styles;assembly=Material.Styles"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewModels="clr-namespace:DesktopUI2.ViewModels"
  d:DesignHeight="450"
  d:DesignWidth="400"
  mc:Ignorable="d">
  <UserControl.Styles>
    <Style Selector="icons|MaterialIcon#send">
      <Setter Property="RenderTransform" Value="rotate(-30deg)" />
    </Style>
    <Style Selector="m|FloatingButton:pointerover icons|MaterialIcon#send">
      <Setter Property="RenderTransform" Value="rotate(-45deg)" />
    </Style>
  </UserControl.Styles>
  <StackPanel Orientation="Vertical">


    <StackPanel Margin="15" Orientation="Horizontal">
      <StackPanel.Styles>
        <Style Selector="TextBlock">
          <Setter Property="FontSize" Value="14" />
        </Style>
      </StackPanel.Styles>
      <TextBlock Classes="SpeckleFont" Text="Sending " />
      <TextBlock
        Classes="SpeckleFont"
        FontWeight="Bold"
        Text="{Binding SelectedFilter.Summary, FallbackValue=?}" />
      <TextBlock Classes="SpeckleFont" Text=" to " />
      <TextBlock
        Classes="SpeckleFont"
        FontWeight="Bold"
        Text="{Binding SelectedBranch.Branch.name, FallbackValue=?}" />
    </StackPanel>

    <!--  SEND BTN  -->
    <Button
      Margin="0,5,0,20"
      HorizontalAlignment="Center"
      Command="{Binding SendCommand}"
      CornerRadius="40"
      IsDefault="True"
      IsEnabled="{Binding Progress.IsProgressing, Converter={x:Static BoolConverters.Not}, FallbackValue=True}"
      ToolTip.Tip="Send to this stream and saves it">
      <Button.Content>
        <StackPanel
          Margin="10"
          Orientation="Horizontal"
          Spacing="12">

          <icons:MaterialIcon
            Name="send"
            Width="20"
            Height="20"
            Foreground="White"
            Kind="CubeSend">
            <icons:MaterialIcon.Transitions>
              <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
              </Transitions>
            </icons:MaterialIcon.Transitions>
          </icons:MaterialIcon>
          <TextBlock
            Classes="ButtonText"
            FontWeight="Bold"
            Text="SEND" />
        </StackPanel>

      </Button.Content>
    </Button>

    <!--  COMMIT AND OTHER BUTTONS  -->
    <Grid
      Grid.Row="1"
      Margin="15,5"
      ColumnDefinitions="*,auto"
      RowDefinitions="auto">
      <!--  COMMIT MESSAGE  -->
      <TextBox
        Margin="0,0,10,0"
        Padding="0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Classes="Filled Dense"
        Foreground="Gray"
        IsEnabled="{Binding Progress.IsProgressing, Converter={x:Static BoolConverters.Not}}"
        IsReadOnly="{Binding Progress.IsProgressing}"
        Text="{Binding StreamState.CommitMessage}"
        Watermark="Message (optional) " />
      <StackPanel
        Grid.Column="1"
        HorizontalAlignment="Right"
        Orientation="Horizontal"
        Spacing="10">

        <!--  SAVE BTN  -->
        <m:FloatingButton
          VerticalAlignment="Center"
          assists:ShadowAssist.ShadowDepth="Depth0"
          Background="Transparent"
          Command="{Binding SaveCommand}"
          IsEnabled="{Binding !Progress.IsProgressing}"
          ToolTip.Tip="Save this sender to the file without sending">
          <Button.Content>
            <icons:MaterialIcon
              Width="20"
              Height="20"
              assists:ShadowAssist.ShadowDepth="0"
              Foreground="Gray"
              Kind="ContentSave" />

          </Button.Content>
        </m:FloatingButton>

        <!--  PREVIEW BTN  -->
        <c:PreviewButton />


      </StackPanel>
    </Grid>

    <!--  SETTINGS  -->
    <Expander
      Padding="15,0"
      HorizontalAlignment="Stretch"
      HorizontalContentAlignment="Stretch"
      Classes="Transparent"
      IsExpanded="{Binding IsExpanded}">
      <Expander.Header>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Send settings" />
          <TextBlock
            Classes="Overline"
            Foreground="Gray"
            Text="  (expand to edit)" />
        </StackPanel>
      </Expander.Header>

      <Grid
        Margin="15,0"
        ColumnDefinitions="auto,*,auto, *"
        RowDefinitions="auto, auto, auto">

        <!--  SELECT BRANCH  -->
        <icons:MaterialIcon
          Margin="0"
          VerticalAlignment="Center"
          Foreground="Gray"
          Kind="InfoCircle"
          ToolTip.Tip="Data in a stream can be organized in branches,&#x0a;for instance, to have multiple design options&#x0a;or to store data by discipline.&#x0a;The default branch is called main." />
        <ComboBox
          Grid.Column="1"
          Margin="5,10,5,10"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          Items="{Binding BranchesViewModel}"
          PlaceholderText="Select a branch"
          SelectedItem="{Binding SelectedBranch, Mode=TwoWay}">
          <ComboBox.ItemsPanel />
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <Grid ColumnDefinitions="auto,*">
                <icons:MaterialIcon
                  Margin="0,0,5,0"
                  Foreground="DarkGray"
                  Kind="{Binding Icon}" />
                <TextBlock
                  Grid.Column="1"
                  Text="{Binding Branch.name}"
                  TextTrimming="CharacterEllipsis" />
              </Grid>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <!--  SELECT FILTER  -->
        <icons:MaterialIcon
          Grid.Column="2"
          Margin="0"
          VerticalAlignment="Center"
          Foreground="Gray"
          Kind="InfoCircle"
          ToolTip.Tip="Each connector offers various&#x0a;ways to send data.&#x0a;Select the filter you want to use." />
        <ComboBox
          Name="FilterCombo"
          Grid.Column="3"
          Margin="5,10,0,10"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Center"
          Items="{Binding AvailableFilters}"
          PlaceholderText="Select a filter"
          SelectedIndex="0"
          SelectedItem="{Binding SelectedFilter}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <Grid ColumnDefinitions="auto,*">
                <icons:MaterialIcon
                  Margin="0,0,5,0"
                  Foreground="DarkGray"
                  Kind="{Binding Filter.Icon}" />
                <TextBlock
                  Grid.Column="1"
                  Text="{Binding Filter.Name}"
                  TextTrimming="CharacterEllipsis" />
              </Grid>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>
        <!--  FILTER INFO - the magic happens in FilterTemplateSelector.cs  -->
        <Grid
          Grid.Row="1"
          Grid.ColumnSpan="4"
          Margin="0,15">
          <ContentControl Content="{Binding SelectedFilter}" />
        </Grid>
        <!--  ADVANCED SETTINGS  -->
        <Button
          Grid.Row="2"
          Grid.ColumnSpan="4"
          Margin="5"
          HorizontalAlignment="Center"
          HorizontalContentAlignment="Center"
          assists:ShadowAssist.ShadowDepth="Depth0"
          Background="Transparent"
          Command="{Binding OpenSettingsCommand}"
          Foreground="{DynamicResource PrimaryHueMidBrush}">
          <Grid Margin="0" ColumnDefinitions="auto,*">
            <icons:MaterialIcon VerticalAlignment="Center" Kind="Settings" />
            <TextBlock
              Grid.Column="1"
              Margin="8,0"
              Padding="0"
              VerticalAlignment="Center"
              Text="Advanced Settings"
              TextTrimming="CharacterEllipsis" />
          </Grid>
        </Button>

      </Grid>

    </Expander>

  </StackPanel>

</UserControl>
